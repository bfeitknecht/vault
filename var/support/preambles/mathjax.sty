%% the step relation on the given argument #1
\newcommand{\step}[1]{\mathbin{\smash{\raise{-.2em}{
    {\Large \vdash}_{
        \kern{-1em}{
            \smash{\raise{.2em}{\scriptscriptstyle #1}}
        }
    }
}}}}

%% the reflexive and transitive closure of the step relation on #1
\newcommand{\steps}[1]{\mathbin{
    \step{#1}^{
        \kern{-.5em}{
            \smash{\raise{-.2em}{\scriptscriptstyle \ast}}
        }
}}}

